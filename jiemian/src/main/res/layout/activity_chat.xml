<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools">
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/progress"
        app:indicatorColor="#0fb73d"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:indicatorName="LineScalePartyIndicator"
        />


    <android.support.v7.widget.RecyclerView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/online_user_list"
        ></android.support.v7.widget.RecyclerView>
    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        fab:fab_addButtonSize="normal"
        fab:fab_addButtonColorNormal="@color/colorPrimary"
        fab:fab_addButtonColorPressed="@color/colorPrimary"
        fab:fab_addButtonPlusIconColor="#ffffff"
        fab:fab_labelStyle="@style/menu_labels_style"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp">
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/history"
            fab:fab_icon="@drawable/ic_assignment_white_48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="#FFFF33"
            fab:fab_title="历史报告"
            fab:fab_addButtonSize="normal"
            fab:fab_colorPressed="#FFFF33"/>
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/readcard"
            fab:fab_icon="@drawable/readcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="#881ECE"
            fab:fab_title="刷卡系统"
            fab:fab_addButtonSize="normal"
            fab:fab_colorPressed="#881ECE"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/download"
            fab:fab_icon="@drawable/download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="#0fb73d"
            android:transitionName="fab"
            fab:fab_title="离线下载"
            fab:fab_addButtonSize="normal"
            fab:fab_colorPressed="#0fb73d"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/colorPrimary"
            fab:fab_addButtonSize="normal"
            fab:fab_title="个人设置"
            fab:fab_icon="@drawable/m_tou"
            fab:fab_colorPressed="@color/colorPrimary"/>
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="#ff0033"
            fab:fab_addButtonSize="normal"
            fab:fab_title="退出登陆"
            fab:fab_icon="@drawable/out"
            fab:fab_colorPressed="#ff0033"/>

    </com.getbase.floatingactionbutton.FloatingActionsMenu>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/no_user"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/no_user"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:text="未连接,请重连"
            android:textStyle="bold"
            android:gravity="center"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重新连接"
            android:textSize="30sp"
            android:id="@+id/bt_reconnect"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/subit_button"
            />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test"
        />
</android.support.design.widget.CoordinatorLayout>